<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/timg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="Select a Bus Line"
                android:layout_marginTop="30dp"
                android:textColor="@color/whiteColor"/>

            <Spinner
                android:id="@+id/busLine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/angle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="From Stop"
                android:layout_marginTop="30dp"
                android:textColor="@color/whiteColor"/>

            <Spinner
                android:id="@+id/fromStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/angle" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30dp"
                android:text="End Stop"
                android:layout_marginTop="30dp"
                android:textColor="@color/whiteColor"/>

            <Spinner
                android:id="@+id/endStop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/angle" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:layout_weight="0.90">
            </LinearLayout>

            <TextView
                android:id="@+id/IdGenerate"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/green_textview"
                android:gravity="center"
                android:onClick="go2Map"
                android:text="Start to Track Bus"
                android:layout_marginBottom="20dp"
                android:textColor="@color/whiteColor"
                android:textSize="30sp" />

        </LinearLayout>

    </RelativeLayout>

</FrameLayout>